# Environnement (local, development, production)
ENV=local

# Configuration GitHub
REPO_URL=https://github.com/votre_utilisateur/votre_repo.git
REPO_DIR=documentation_repo
COPILOT_TOKEN=votre_token_github

# Configuration AWS
AWS_ACCESS_KEY_ID=votre_access_key
AWS_SECRET_ACCESS_KEY=votre_secret_key
AWS_REGION=ca-central-1
S3_BUCKET_NAME=mon-bucket-faiss

# Configuration FAISS
FAISS_INDEX_FILE=index.faiss
FAISS_METADATA_FILE=metadata.json

# Configuration de l'API
PORT=8000
HOST=0.0.0.0

# Configuration des logs
LOG_LEVEL=INFO

# Configuration de segmentation
SEGMENT_MAX_LENGTH=1000